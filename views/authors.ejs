<%-include("partials/header.ejs") %>
<div class="container mt-4">
	<div class="mb-3">
		<input
			type="text"
			id="filterBar"
			class="form-control"
			placeholder="Filter your authors..."
			onkeyup="filterAuthors()"
		/>
	</div>

	<div class="row justify-content-start" id="bookList">
		<!-- Save the user id for future use. -->
		<input type="hidden" id="userId" value="<%= locals.userId %>" />
		<% authorList.forEach(author => { %>
		<div class="col-sm-6 col-md-4 col-lg-3 d-flex align-items-stretch">
			<div class="card text-center mb-3" style="width: 100%">
				<div class="card-body">
					<h5 class="card-title simonetta-black"><%= author.author_name %></h5>
					<% const cover = author.author_wikidata || 'default-picture'; %> <img
					<%if ( cover == "default-picture" ) {%> src="/images/blank_cover.jpeg"
					<%}else{%> src="//covers.openlibrary.org/a/id/<%=cover%>-M.jpg" <%}%>
					alt="author picture" height="200px" />
					<p class="card-text simonetta-regular-italic">
						( <%= author.author_birth_date %> / <%= author.author_death_date %>
						)
					</p>
					<button
						type="button"
						class="btn btn-primary moreBtn fontFlex"
						data-key="<%= author.id_author %>"
					>
						View More
					</button>
				</div>
			</div>
		</div>
		<% }); %>
	</div>
</div>

<%-include("partials/footer.ejs") %>
