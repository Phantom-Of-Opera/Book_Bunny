<%-include("partials/header.ejs") %>

<div class="container mt-4">
	<div class="row justify-content-start">
		<% blogList.forEach(blogs => { %>
		<div class="col-sm-6 col-md-4 col-lg-3 d-flex align-items-stretch">
			<div class="card text-center mb-3" style="width: 100%">
				<div class="card-body">
					<h5 class="card-title simonetta-black"><%= blogs.blogTitle %></h5>
					<p class="card-text simonetta-regular-italic">
						by <%= blogs.blogAuthor %>
					</p>
					<button
						type="submit"
						class="btn btn-primary blogBtn"
						data-key="<%= blogs.blogKey %>"
					>
						Select
					</button>
				</div>
			</div>
		</div>
		<% }); %>
	</div>
</div>

<%-include("partials/footer.ejs") %>
