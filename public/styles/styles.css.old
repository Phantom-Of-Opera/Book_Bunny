html,
body {
	background-color: #faeed1;
	color: #443627;
	display: flex;
	flex-direction: column;
	font-size: 16px;
	height: 100%;
	margin: 0;
}

header {
	display: flex;
	justify-content: space-between;
}

.fontFlex-h1 {
	font-size: clamp(1.5rem, 4vw, 5rem);
	margin: 0;
	overflow: hidden;
	white-space: nowrap;
}

.navbar {
	padding: 0;
}

.container-fluid {
	background-color: #faeed1;
	border-bottom: #a27b5c;
	border-bottom-style: solid;
	border-bottom-width: 4px;
}

.searchBar {
	align-items: center;
	display: flex;
	flex-direction: row;
	gap: 0.5rem;
}

#searchForm {
	text-align: center;
}

.searchInput {
	flex: 1 1 auto;
	flex-basis: auto;
}

.searchButton {
	flex: 0 0 auto;
	flex-basis: 100px;
	white-space: nowrap;
}

.searchLabel {
	flex: 0 0 auto;
	flex-basis: auto;
	margin-left: 20px;
	white-space: nowrap;
}

.searchResult {
	border-color: #443627;
	border-radius: 10px;
	border-style: ridge;
	border-width: 1px;
	display: flex;
	flex-direction: row;
	gap: 0.5rem;
	margin-bottom: 5px;
	padding-left: 40px;
}

.bookResult {
	background-color: #faeed1;
	border-style: none;
	flex: 1 1 auto;
	flex-basis: auto;
}

.coverResult {
	align-items: center;
	display: flex;
	height: 70px;
	min-width: 60px;
	text-align: center;
	white-space: nowrap;
}

.userPage {
	margin-top: 20px;
	text-align: center;
}

.userFlex {
	display: flex;
	flex-direction: row;
	flex-wrap: nowrap;
	gap: 20px;
	justify-content: space-evenly;
	margin-bottom: 50px;
	margin-top: 50px;
}

#userSelect {
	padding: 10px !important;
}

#newIconLabel {
	flex-basis: auto;
	height: 100%;
}

#iconDiv {
	align-items: center;
	display: flex;
	flex-direction: row;
	gap: 10px;
}

#newIconBox {
	flex-basis: 30%;
	font-size: 2rem;
	height: 100%;
	padding-top: 5px !important;
	text-align: center;
}

.bi {
	color: #443627;
}

.boxBorder {
	border-color: #a27b5c;
	border-radius: 5px;
	border-style: solid;
	border-width: 2px;
	margin-bottom: 10px;
	margin-left: 5px;
	margin-right: 5px;
	margin-top: 10px;
}

.form-signin {
	max-width: 330px;
	padding: 1rem;
}

.strip {
	background-color: #dac0a3;
}

.userBox {
	background-color: #a27b5c;
	border-radius: 10px;
	color: white;
	font-size: 1rem;
	height: 80px;
	margin-top: 10px;
	padding-left: 10px;
	padding-right: 10px;
}

.tab-view {
	margin-top: 10px;
}

form.tab-view .btn {
	flex: 1 1 auto;
	min-width: 120px;
	white-space: nowrap;
}

.card {
	border-color: #443627;
	border-radius: 30px;
	border-style: solid;
	overflow: hidden;
}

.card-body {
	background-color: #f8f0e5;
}

.main-content {
	flex: 1;
}

.img-fluid {
	max-width: 80%;
}

.logo {
	border-color: #a27b5c;
	border-radius: 50%;
	border-style: solid;
	border-width: 2px;
	height: 20vh;
	max-height: 90px;
}

.userIcon {
	border-radius: 50%;
	height: 50px;
	max-height: 90px;
}

.btn {
	background-color: #a27b5c;
	border: none;
	color: white;
}

.fontFlex {
	font-size: clamp(0.8rem, 1vw, 1rem);
}

.btn:hover {
	background-color: #6f4e37;
	border: none;
	color: white;
}

#btnDelete:hover {
	background-color: red;
}

#btnSubmit:hover {
	background-color: green;
}

#btnCancel:hover {
	background-color: yellow;
	color: black;
}

.special-elite-regular {
	font-family: "Special Elite", serif;
	font-style: normal;
	font-weight: 600;
}

.simonetta-regular {
	font-family: "Simonetta", serif;
	font-style: normal;
	font-weight: 400;
}

.simonetta-black {
	font-family: "Simonetta", serif;
	font-style: normal;
	font-weight: 900;
}

.simonetta-regular-italic {
	font-family: "Simonetta", serif;
	font-style: italic;
	font-weight: 400;
}

.simonetta-black-italic {
	font-family: "Simonetta", serif;
	font-style: italic;
	font-weight: 900;
}
